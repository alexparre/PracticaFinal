---
import '../../styles/global.css';
import { getNews } from '../../utils/api';
import SearchComponent from '../../components/SearchComponent';
import ProfileComponent from '../../components/ProfileComponent';
import CartIcon from '../../components/CartIcon';

const news = await getNews();
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Noticias - IT Academy</title>
</head>
<body class="bg-gradient-to-b from-gray-50 via-white to-gray-100 text-gray-900">
  <div class="w-full">
    <!-- Hero Section con Nav integrado -->
    <header class="relative text-white w-full" style="background: url('/fondo.gif') no-repeat center center; background-size: cover;">
      <div class="absolute inset-0 bg-black bg-opacity-50"></div>
      <!-- Barra de NavegaciÃ³n -->
      <nav class="relative z-10 w-full">
        <div class="flex justify-between items-center w-full">
          <a href="/" class="flex items-center text-4xl font-extrabold tracking-wide hover:text-gray-200">
            IT-ACADEMY
          </a>
          <ul class="flex space-x-8">
            <SearchComponent client:load />
            <ProfileComponent client:load />
            <CartIcon client:load />
            <li>
              <a href="/" class="hover:text-gray-300 text-lg py-[3px] mt-2 transition-all duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 64 64" width="28" height="30" fill="currentColor">
                  <path d="M32 3.5L2 28h6v30h16V41h16v17h16V28h6L32 3.5zM22 52h-8V36h8v16zm28 0h-8V36h8v16zM32 10L8 28h6v24h12V38h12v14h12V28h6L32 10z" />
                </svg>
              </a>
            </li>
            <li>
              <a href="/noticias" class="hover:text-gray-300 py-[3px] text-lg transition-all duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 64 64" width="28" height="29" fill="currentColor">
                  <path d="M54 4H10a6 6 0 0 0-6 6v44a6 6 0 0 0 6 6h44a6 6 0 0 0 6-6V10a6 6 0 0 0-6-6zM10 8h44a2 2 0 0 1 2 2v36H8V10a2 2 0 0 1 2-2zm0 48a2 2 0 0 1-2-2v-6h48v6a2 2 0 0 1-2 2H10zm8-38h24v4H18zm0 10h28v4H18zm0 10h20v4H18z" />
                </svg>
              </a>
            </li>
          </ul>
        </div>
      </nav>

      <div class="relative text-center w-full">
        <h1 class="text-5xl sm:text-6xl lg:text-7xl font-extrabold mb-6 drop-shadow-lg">
          Ãšltimas noticias sobre IT y Tecnologia
          <span class="inline-block">ðŸ¤–</span>
          <span class="inline-block">ðŸ“²</span>
        </h1>
        <p class="text-xl sm:text-2xl lg:text-3xl mb-8 text-gray-200">Enterate de las noticias mundiales para este 2025</p>
      </div>
    </header>

    <!-- SecciÃ³n de noticias -->
    <main class="w-full">
      <div class="w-full">
        <h2 class="text-4xl sm:text-5xl font-extrabold mb-12 text-center text-blue-600">
          Ãšltimas Noticias
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
          {news.map((item) => (
            <a href={`/noticias/${item.id}`} class="block">
              <article class="bg-white shadow-lg rounded-xl overflow-hidden hover:shadow-2xl transition-all duration-300">
                <div class="relative h-48 overflow-hidden">
                  <img 
                    src={item.image} 
                    alt={item.title} 
                    class="w-full h-full object-cover" 
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                </div>
                <div class="p-6">
                  <h3 class="text-2xl font-bold mb-4 text-gray-800 hover:text-blue-600 transition-colors duration-300">{item.title}</h3>
                  <p class="text-gray-600 mb-4 line-clamp-3">{item.description}</p>
                  <span class="text-blue-600 font-semibold inline-flex items-center">
                    Leer mÃ¡s 
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  </span>
                </div>
              </article>
            </a>
          ))}
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer class="bg-[rgb(4,81,99)] text-gray-400 py-10 w-full">
      <div class="w-full text-center">
        <p class="text-lg font-semibold text-gray-200">Gracias por visitar IT-ACADEMY</p>
        <p class="text-sm mt-4">&copy; 2025 IT Academy. Todos los derechos reservados.</p>
      </div>
    </footer>
  </div>
</body>
</html>
